generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  // @id -> this will be my id
  // @default(auto()) @map("_id") @db.ObjectId -> my id will be my object id
  // ? -> meaning it can be null
  // @default(now()) -> stores the current date
  
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String @unique
  password String
  avatar String?
  createdAt DateTime @default(now())

}